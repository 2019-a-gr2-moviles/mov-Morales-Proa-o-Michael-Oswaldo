<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearConductorActivity">

    <Button
            android:text="Crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_crear" app:layout_constraintStart_toStartOf="@+id/date_fecha"
            app:layout_constraintEnd_toEndOf="@+id/date_fecha"
            app:layout_constraintHorizontal_bias="0.576"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/date_fecha"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.342"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_nombres" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_apellidos"
            app:layout_constraintStart_toStartOf="@+id/edit_nombres"
            app:layout_constraintEnd_toEndOf="@+id/edit_nombres"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_nombres"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/date_fecha"
            app:layout_constraintStart_toStartOf="@+id/edit_apellidos"
            app:layout_constraintEnd_toEndOf="@+id/edit_apellidos"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/edit_apellidos"
    />
    <TextView
            android:text="Fecha:"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.254" app:layout_constraintVertical_bias="0.427"/>
    <TextView
            android:text="Apellidos"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.267"
            app:layout_constraintVertical_bias="0.276"/>
    <TextView
            android:text="Nombres:"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.276"
            app:layout_constraintVertical_bias="0.082"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavegacionUsuario.UsuarioMainActivity" android:background="@drawable/mascotas">
    <TextView
            android:text="Bienvenido Usuario"
            android:layout_width="174dp"
            android:layout_height="34dp"
            android:id="@+id/txt_bienvenida"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    />
    <Button
            android:text="Todas Las Mascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_todas_mascotas"
            app:layout_constraintEnd_toEndOf="@+id/txt_bienvenida"
            app:layout_constraintStart_toStartOf="@+id/txt_bienvenida" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/txt_bienvenida"/>
    <Button
            android:text="Mis Mascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mis_mascotas" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_todas_mascotas"
            app:layout_constraintEnd_toEndOf="@+id/btn_todas_mascotas"
            app:layout_constraintStart_toStartOf="@+id/btn_todas_mascotas"
            app:layout_constraintHorizontal_bias="0.48"/>
    <Button
            android:text="Buscar Mascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_buscar"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_mis_mascotas"
            app:layout_constraintEnd_toEndOf="@+id/btn_mis_mascotas"
            app:layout_constraintStart_toStartOf="@+id/btn_mis_mascotas" app:layout_constraintHorizontal_bias="0.62"/>


</android.support.constraint.ConstraintLayout>
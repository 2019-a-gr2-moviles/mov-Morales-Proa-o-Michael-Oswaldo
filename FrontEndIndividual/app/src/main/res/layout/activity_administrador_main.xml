<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdministradorMainActivity" android:background="@drawable/mascotas2">
    <TextView
            android:text="REGISTRO DE PERROS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Registrar"
            android:textSize="30sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:hint="Edad"
            android:ems="10"
            android:id="@+id/edit_edad"
            app:layout_constraintTop_toBottomOf="@+id/edit_nombre"
            app:layout_constraintStart_toStartOf="@+id/edit_nombre" app:layout_constraintEnd_toEndOf="@+id/edit_nombre"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:hint="Tamaño"
            android:ems="10"
            android:id="@+id/edit_tamanio"
            app:layout_constraintStart_toStartOf="@+id/edit_raza"
            app:layout_constraintEnd_toEndOf="@+id/edit_raza" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/edit_raza"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:hint="Genero"
            android:ems="10"
            android:id="@+id/edit_genero"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_tamanio"
            app:layout_constraintStart_toStartOf="@+id/edit_tamanio" app:layout_constraintEnd_toEndOf="@+id/edit_tamanio"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:hint="Raza"
            android:ems="10"
            android:id="@+id/edit_raza"
            app:layout_constraintStart_toStartOf="@+id/edit_descripcion"
            app:layout_constraintEnd_toEndOf="@+id/edit_descripcion" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_descripcion" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="79dp"
            android:inputType="textPersonName"
            android:hint="Descripción"
            android:ems="10"
            android:id="@+id/edit_descripcion"
            app:layout_constraintEnd_toEndOf="@+id/edit_edad"
            app:layout_constraintStart_toStartOf="@+id/edit_edad" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/edit_edad"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:ems="10"
            android:id="@+id/edit_nombre" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_Registrar"
            app:layout_constraintStart_toStartOf="@+id/txt_Registrar"
            app:layout_constraintEnd_toEndOf="@+id/txt_Registrar" app:layout_constraintHorizontal_bias="1.0"
    />
    <Button
            android:text="Crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_crear" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_genero"
            app:layout_constraintStart_toStartOf="@+id/edit_genero"
            app:layout_constraintEnd_toEndOf="@+id/edit_genero" app:layout_constraintHorizontal_bias="0.164"/>


</android.support.constraint.ConstraintLayout>
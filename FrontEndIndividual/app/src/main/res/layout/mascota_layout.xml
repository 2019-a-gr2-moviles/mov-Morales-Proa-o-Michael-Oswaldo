<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mascota_layout">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="206dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/img_mascota" android:layout_marginTop="19dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" app:srcCompat="@drawable/c2" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="264dp"
            android:layout_height="wrap_content" android:id="@+id/txt_nombre"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/img_mascota" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="69dp" android:layout_marginEnd="69dp"
            android:textSize="30sp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="290dp"
            android:layout_height="92dp" android:id="@+id/txt_descripcion" android:layout_marginTop="21dp"
            android:layout_below="@+id/txt_raza" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="37dp" android:layout_marginEnd="37dp"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignLeft="@+id/txt_raza"
            android:layout_alignStart="@+id/txt_raza"/>
    <TextView
            android:text="TextView"
            android:layout_width="252dp"
            android:layout_height="38dp" android:id="@+id/txt_raza" android:layout_marginTop="17dp"
            android:layout_below="@+id/txt_nombre" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="74dp" android:layout_marginEnd="74dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_genero" android:layout_marginTop="46dp"
            android:layout_below="@+id/img_mascota" android:layout_alignParentStart="true"
            android:layout_marginLeft="259dp" android:layout_marginStart="259dp" android:layout_alignParentLeft="true"/>
    <Button
            android:text="Adoptar"
            android:layout_width="wrap_content"
            android:layout_height="54dp" android:id="@+id/btn_adoptar" android:layout_marginTop="19dp"
            android:layout_below="@+id/txt_descripcion" android:layout_alignRight="@+id/txt_descripcion"
            android:layout_marginRight="101dp" android:layout_marginEnd="101dp"
            android:layout_alignEnd="@+id/txt_descripcion" android:layout_marginLeft="81dp"
            android:layout_marginStart="81dp" android:layout_alignLeft="@+id/txt_descripcion"
            android:layout_alignStart="@+id/txt_descripcion"/>


</RelativeLayout>

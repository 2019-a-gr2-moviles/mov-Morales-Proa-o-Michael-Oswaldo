<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_messenger"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile_image"
            android:layout_width="105dp"
            android:layout_height="104dp"
            android:src="@drawable/a1"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_nombre_usuario"
            android:layout_toEndOf="@+id/img_profile_image"
            android:layout_toRightOf="@+id/img_profile_image" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="150dp" android:layout_marginEnd="150dp" android:layout_marginTop="27dp"
            android:layout_alignParentTop="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="124dp"
            android:layout_height="wrap_content" android:id="@+id/txt_mensaje" android:layout_marginTop="18dp"
            android:layout_below="@+id/txt_nombre_usuario" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="150dp" android:layout_marginEnd="150dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_hora"
            android:layout_toEndOf="@+id/img_profile_image"
            android:layout_toRightOf="@+id/img_profile_image" android:layout_marginLeft="227dp"
            android:layout_marginStart="227dp" android:layout_marginTop="25dp" android:layout_alignParentTop="true"/>
</RelativeLayout>
